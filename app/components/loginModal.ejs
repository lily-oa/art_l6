<!-- Sing in 登入 Modal -->
<div 
  class="modal fade z-index-10000 js-sign-in-modal" 
  tabindex="-1" 
  aria-labelledby="loginModalLabel" 
  aria-hidden="true"
  style="z-index: 1100;"
>
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-3 border-3 border-bottom-0 border-start-0 border-end-0 border-secondary">
      <div class="modal-header">
        <h5 
          class="modal-title text-primary fw-bolder fs-3" 
          id="exampleModalLabel"
        >
          登入 Sing in
        </h5>
        <button 
          type="button" 
          class="btn-close" 
          data-bs-dismiss="modal" 
          aria-label="Close"
        >
        </button>
      </div>
      <div class="modal-body">
        <form class="js-modal-login-check">
          <ul>
            <li class="mb-3">
              <label 
                for="loginEmail" 
                class="form-label fs-5"
                required
              >
                帳號
              </label>
              <input 
                type="email"
                name="Email"
                class="form-control js-modal-login-input js-user-email"
                id="loginEmail"
                arial-describedby="emailHelp"
                placeholder="請輸入您的電子信箱"
                autocomplete="username"
                required
              >
              <!--信箱驗證-->
              <p 
                class="
                        js-validate-msg validate-msg
                        fs-10 text-danger text-end 
                        pt-2
                      "
              >
              </p>
            </li>
            <li class="mb-3">
              <label 
                for="loginPassword" 
                class="form-label fs-5"
              >
                密碼
              </label>
              <input 
                type="password"
                name="密碼"
                class="form-control js-modal-login-input js-user-password mb-2"
                id="loginPassword"
                placeholder="請輸入您的密碼"
                autocomplete="on"
                pattern='^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$!%*?&]{1})[A-Za-z\d@#$!%*?&]{8,}$'
                required
              >
              <!--密碼驗證-->
              <p 
                class="
                        js-validate-msg validate-msg
                        fs-10 text-danger text-end 
                        pt-2
                      "
              ></p>
            
            <!--埋入跳轉按鈕，另一個忘記密碼的互動視窗-->
            <a 
              href="#forgotPasswordModal" 
              data-bs-target="#forgotPasswordModal"
              data-bs-toggle="modal"
              data-bs-dismiss="modal"
              class="text-secondary forgotPasswordModal-btn d-inline border__bottom__hover"
            >
              忘記密碼
            </a>
            </li>
            <li class="position-relative">
              <div class="disabled-style"></div>
              <button
                type="submit"
                class="
                        btn btn-secondary
                        btn-lg rounded-pill w-100
                        js-form-submit-btn 
                        js-login-btn
                      "
              >
                登入
              </button>
            </li>
          </ul>
        </form>
        <div class="position-relative my-4">
          <div class="progress" style="height: 2px;">
            <div
              class="progress-bar bg-light"
              role="progressbar"
              style="width: 100%;"
              aria-valuenow="50"
              aria-valuemin="0"
              aria-valuemax="100"
            >
            </div>
          </div> 
          <div class="position-absolute top-0 start-50 translate-middle px-3 bg-white fs-6 d-flex">
            <!-- sm及以上顯示-->
            <p class="text-wordColor_1 d-none d-sm-block">還沒有帳號？</p> 
            <a 
              href="#"
              data-bs-target="#registerModal"
              data-bs-toggle="modal"
              data-bs-dismiss="modal"
              class="link-primary useHover_1 js-sign-up-modal-btn"
            >
              註冊一個帳號
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


<!-- Sing up 註冊 Modal -->
<div 
  class="modal fade z-index-10000 js-sign-up-modal" 
  tabindex="-1" 
  aria-labelledby="registerModalLabel" 
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 
          class="modal-title fw-bolder text-primary fs-7" 
          id="registerModalLabel"
        >
          註冊 Sing up
        </h5>
        <button 
          type="button" 
          class="btn-close" 
          data-bs-dismiss="modal" 
          aria-label="Close"
        >
        </button>
      </div>
      <div class="modal-body">
        <form class="js-modal-sign-up-check">
          <ul class="mb-10">
            <li class="mb-10">
              <label 
                for="SignUpUserEmail" 
                class="form-label mb-2"
              >
                帳號
              </label>
              <input 
                type="email" 
                name="Email" 
                placeholder="請輸入 Email" 
                id="SignUpUserEmail" 
                class="form-control js-modal-sign-up-input js-user-email"
                required
              >
            <!--信箱驗證-->
            <p 
              class="
                      js-validate-msg validate-msg
                      fs-10 text-danger text-end 
                      pt-2
                    "
            >
            </p>
            </li>

            <li class="mb-10">
              <label 
                for="singUpUserPassword" 
                class="form-label mb-2"
              >
                密碼
              </label>
              <input 
                type="password" 
                name="密碼" 
                placeholder="請輸入密碼" 
                id="singUpUserPassword" 
                autocomplete="on"
                class="form-control js-modal-sign-up-input js-user-password"
                pattern='^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$!%*?&]{1})[A-Za-z\d@#$!%*?&]{8,}$'
                required
              >
              <!--密碼驗證-->
              <p 
              class="
                      js-validate-msg validate-msg
                      fs-10 text-danger text-end 
                      pt-2
                    "
            ></p>
            </li>

            <li class="mb-10">
              <label 
                for="singUpUserName" 
                class="form-label mb-2"
              >
                用戶名稱
              </label>
              <input 
                type="text" 
                name="用戶名稱" 
                placeholder="請輸入用戶名稱" 
                id="singUpUserName" 
                pattern='^^[a-zA-Z\s\d]+$'
                minlength="2" 
                class="form-control js-modal-sign-up-input js-user-name"
                required
              >
            <!--用戶名稱驗證-->
            <p 
            class="
                    js-validate-msg validate-msg
                    fs-10 text-danger text-end 
                    pt-2
                  "
            ></p>
            </li>

            <li class="mb-6">
              <label 
                for="singUpUserPhone" 
                class="form-label mb-2"
              >
                手機號碼
              </label>
              <input 
                type="tel" 
                name="手機" 
                placeholder="請輸入手機號碼" 
                id="singUpUserPhone" 
                maxlength="10"
                pattern="^09\d{8}$"
                class="form-control js-modal-sign-up-input js-user-phone"
                required
              >
            <!--手機驗證-->
            <p 
              class="
                      js-validate-msg validate-msg
                      fs-10 text-danger text-end 
                      pt-2
                    "
            ></p>
            </li>
            
            <li class="position-relative">
              <div class="disabled-style"></div>
              <button 
                type="submit" 
                class="
                        btn btn-secondary 
                        rounded-pill w-100 btn-lg
                        fw-bolder
                        js-form-submit-btn
                      "
              >
                註冊
              </button>
            </li>
          </ul>
          <ul class="mb-8">
            <li>
              <h3 
                class="modal-title fw-bolder text-center border-top pt-3 w-100 fs-11"
              >
                快速註冊
              </h3>
            </li>
            <li>
              <ul class="d-flex justify-content-center">
                <li class="me-4">
                  <a href="https://accounts.google.com/signin/v2/identifier?hl=zh-TW&passive=true&continue=https%3A%2F%2Fwww.google.com.tw%2F&ec=GAZAmgQ&flowName=GlifWebSignIn&flowEntry=ServiceLogin/"
                    class="d-block useHover_1" 
                    data-bs-toggle="tooltip" 
                    data-bs-placement="bottom" 
                    title="Google 快速註冊"
                    type="button"
                  >
                    <i class="bi bi-google fs-4"></i>
                  </a>
                </li>
                <li>
                  <a href="https://zh-tw.facebook.com/login/web/" 
                    class="d-block useHover_1" 
                    data-bs-toggle="tooltip"
                    data-bs-placement="bottom" 
                    title="Facebook 快速註冊" 
                    type="button"
                  >
                    <i class="bi bi-facebook fs-4"></i>
                  </a>
                </li>
              </ul>
            </li>
          </ul>
          <ul class="text-center w-100">
            <li class="mb-3">
              <h3 class="modal-title fs-11 fw-bolder">已有帳號？</h3>
            </li>
            <li>
              <a 
                href="#" 
                type="button" 
                class="
                        btn btn-outline-primary 
                        w-100 rounded-pill btn-lg
                        js-sign-in-modal-btn
                      "
              >
                前往登入
              </a>
            </li>
          </ul>
        </form>
      </div>
    </div>
  </div>
</div>