<!-- 註冊 Modal -->
<div 
  class="modal fade z-index-10000 js-sign-up-modal" 
  tabindex="-1" 
  aria-labelledby="registerModalLabel" 
  aria-hidden="true"
>
  <div class="modal-dialog modal-dialog-centered ">
    <div class="modal-content">
      <div class="modal-header">
        <h5 
          class="modal-title fw-bolder text-primary fs-7" 
          id="registerModalLabel"
        >
          註冊 Sing up
        </h5>
        <button 
          type="button" 
          class="btn-close" 
          data-bs-dismiss="modal" 
          aria-label="Close"
        >
        </button>
      </div>
      <div class="modal-body">
        <form class="js-modal-sign-up-check">
          <ul class="mb-10">
            <li class="mb-10">
              <label 
                for="userEmail" 
                class="form-label mb-2"
              >
                帳號
              </label>
              <input 
                type="email" 
                name="Email" 
                placeholder="請輸入 Email" 
                id="userEmail" 
                class="form-control js-modal-sign-up-input js-user-email"
                required
              >
            <!--信箱驗證-->
            <p 
              class="
                      js-validate-msg validate-msg
                      fs-10 text-danger text-end 
                      pt-2
                    "
            >
            </p>
            </li>
            <li class="mb-10">
              <label 
                for="userPassword" 
                class="form-label mb-2"
              >
                密碼
              </label>
              <input 
                type="password" 
                name="密碼" 
                placeholder="請輸入密碼" 
                id="userPassword" 
                autocomplete="on"
                class="form-control js-modal-login-input js-user-password"
                pattern='^(?=.*[a-z])(?=.*[A-Z])(?=.*\d)(?=.*[@#$!%*?&]{1})[A-Za-z\d@#$!%*?&]{8,}$'
                required
              >
              <!--密碼驗證-->
              <p 
              class="
                      js-validate-msg validate-msg
                      fs-10 text-danger text-end 
                      pt-2
                    "
            ></p>
            </li>
            <li class="mb-10">
              <label 
                for="userName" 
                class="form-label mb-2"
              >
                用戶名稱
              </label>
              <input 
                type="text" 
                name="用戶名稱" 
                placeholder="請輸入用戶名稱" 
                id="userName" 
                pattern='^^[a-zA-Z\s\d]+$'
                minlength="2" 
                class="form-control js-modal-sign-up-input js-user-name"
                required
              >
            <!--用戶名稱驗證-->
            <p 
            class="
                    js-validate-msg validate-msg
                    fs-10 text-danger text-end 
                    pt-2
                  "
            ></p>
            </li>
            <li class="mb-6">
              <label 
                for="userPhone" 
                class="form-label mb-2"
              >
                手機號碼
              </label>
              <input 
                type="tel" 
                name="手機" 
                placeholder="請輸入手機號碼" 
                id="userPhone" 
                maxlength="10"
                pattern="^09\d{8}$"
                class="form-control js-modal-sign-up-input js-user-phone"
                required
              >
            <!--手機驗證-->
            <p 
            class="
                    js-validate-msg validate-msg
                    fs-10 text-danger text-end 
                    pt-2
                  "
            ></p>
            </li>
            <li class="position-relative">
              <div class="disabled-style"></div>
              <button 
                type="submit" 
                class="
                        btn btn-secondary w-100 
                        rounded-pill fw-bolder
                        js-form-submit-btn
                      "
              >
                註冊
              </button>
            </li>
          </ul>
          <ul>
            <li class="mb-8">
              <h3 class="modal-title fw-bolder text-center border-top pt-3 w-100 fs-11">
                快速註冊
              </h3>
            </li>
            <li>
              <ul class="d-flex justify-content-center">
                <li class="me-4">
                  <a href="https://accounts.google.com/signin/v2/identifier?hl=zh-TW&passive=true&continue=https%3A%2F%2Fwww.google.com.tw%2F&ec=GAZAmgQ&flowName=GlifWebSignIn&flowEntry=ServiceLogin/"
                    class="d-block useHover_1" data-bs-toggle="tooltip" data-bs-placement="bottom" title="Google 快速註冊"
                    type="button">
                    <i class="bi bi-google fs-4"></i>
                  </a>
                </li>
                <li>
                  <a href="https://zh-tw.facebook.com/login/web/" class="d-block useHover_1" data-bs-toggle="tooltip"
                    data-bs-placement="bottom" title="Facebook 快速註冊" type="button">
                    <i class="bi bi-facebook fs-4"></i>
                  </a>
                </li>
              </ul>
            </li>
          </ul>
      </div>
      <div class="modal-footer">
        <ul class="text-center w-100">
          <li class="mb-3">
            <h3 class="modal-title fs-11 fw-bolder">已有帳號？</h3>
          </li>
          <li>
            <a 
              href="#" 
              type="button" 
              class="
                      btn btn-outline-primary 
                      w-100 rounded-pill 
                      js-sign-in-modal-btn
                    "
            >
              前往登入
            </a>
          </li>
        </ul>
      </div>
      </form>
    </div>
  </div>
</div>